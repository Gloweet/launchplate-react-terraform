{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "terraform@latest",
    "awscli@latest",
    "pre-commit@latest",
    "tflint@latest",
    "trivy@latest",
    "checkov@latest",
    "tfupdate@latest",
    "terragrunt@latest",
    "hclfmt@latest",
    "jq@latest"
  ],
  "shell": {
    "init_hook": "DIR=~/.git-template; git config --global init.templateDir ${DIR}; pre-commit init-templatedir -t pre-commit ${DIR}"
  }
}
